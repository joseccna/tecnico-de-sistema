<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestaoDeEscalas.Cadastro" 
             Background="#1C1C1E">
    <Grid>
        <Image Source="planodefundo.png" Aspect="AspectFill" HorizontalOptions="Center" VerticalOptions="Fill"/>
    
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" >
        <Label Text="Cadastro" 
               FontSize="40"
               FontAttributes="Bold"
               TextColor="#FFFFFF"/>
        
<Border Stroke="#2C2C2E" StrokeThickness="2" Background="#2C2C2E" Padding="30" WidthRequest="500">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            
            <Border.Shadow>
                <Shadow Brush="Black" Offset="5,5" Radius="10" Opacity="0.5"/>
            </Border.Shadow>
            
            <Grid RowDefinitions="*,*,*,*,*,*,*" VerticalOptions="Center" WidthRequest="400">
                <Label Grid.Row="0" Text="Nome completo" TextColor="#D3D3D3"/>
                <Entry Grid.Row="1" Placeholder="Nome"/>
                <Label Grid.Row="2" Text="E-mail" TextColor="White"/>
                <Entry Grid.Row="3" Margin="0,0,0,10" Placeholder="E-mail" TextColor="#D3D3D3"/>
                <Label Grid.Row="4" Margin="0,0,0,10" Text="Senha" TextColor="#D3D3D3"/>
                <Entry x:Name="EntrySenha" Grid.Row="5" Placeholder="*******" Margin="0,0,0,40" IsPassword="True"/>
                <ImageButton x:Name="BtnOlho" Grid.Row="5" Source="olhofechado.png" HeightRequest="25" WidthRequest="25" Margin="0,0,15,40"  VerticalOptions="Center" HorizontalOptions="End"  Clicked="OnShowPasswordClicked" Background="Transparent"/>
                <Button Grid.Row="6" Margin="0,0,0,40" Text="Cadastrar" TextColor="White" Clicked="OnVoltarInicialCliked"/>


            </Grid>
        </Border>
    </VerticalStackLayout>
   </Grid>

</ContentPage>









    
  